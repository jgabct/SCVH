<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/16S" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox id="vBoxMain" fx:id="vBoxMain" fillWidth="false" prefHeight="500.0" prefWidth="300.0" spacing="10.0">
         <children>
            <Label fx:id="header" prefHeight="25.0" prefWidth="180.0" text="Login">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="20.0" left="60.0" top="70.0" />
               </VBox.margin>
            </Label>
            <VBox prefHeight="55.0" prefWidth="180.0">
               <children>
                  <Label prefHeight="20.0" prefWidth="180.0" text="Matricula">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="employeeEnrolmentTextField" prefHeight="25.0" prefWidth="180.0" />
               </children>
               <VBox.margin>
                  <Insets left="60.0" />
               </VBox.margin>
            </VBox>
            <VBox prefHeight="55.0" prefWidth="180.0">
               <children>
                  <Label prefHeight="20.0" prefWidth="180.0" text="Senha">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="employeePasswordTextField" prefHeight="25.0" prefWidth="180.0">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets left="60.0" />
               </VBox.margin>
            </VBox>
            <Button fx:id="commitButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="80.0" text="Entrar">
               <VBox.margin>
                  <Insets left="160.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <VBox id="vBoxTitle" fx:id="vBoxTitle" fillWidth="false" layoutX="300.0" prefHeight="500.0" prefWidth="400.0" spacing="5.0">
         <children>
            <Label fx:id="title" text="Gateway">
               <VBox.margin>
                  <Insets left="40.0" top="60.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="subtitle" text="Um Sistema de Controle de Visitas">
               <VBox.margin>
                  <Insets left="40.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
